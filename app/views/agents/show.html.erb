<div class="h-screen flex flex-col items-stretch">
  <header class="p-6">
    <h1 class="text-4xl font-bold">AI Agent</h1>
  </header>
  <main class="flex-1 bg-gray-50 p-6 overflow-y-auto" id="messages">
    <%= render(MessageComponent.new(message: { role: "user", content: "Hello, how are you?" })) %>
    <%= render(MessageComponent.new(message: { role: "assistant", content: "I'm doing great, thanks for asking!" })) %>
  </main>
  <footer class="p-6">
    <%= form_with url: agent_path, method: :post, class: "flex items-center gap-2" do |form| %>
      <%= form.text_area :message, rows: 1, placeholder: "Ask the agent a question", class: "flex-1" %>
      <%= form.submit "Send", class: "bg-red-500 text-white px-4 py-2 rounded-md" %>
    <% end %>
  </footer>
</div>
